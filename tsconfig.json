{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "ts-config/tsconfig.application.json",
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "outDir": "./build/dist",
        "baseUrl": ".",
        "types": [
            "node",
            "jsdom",
            "ramda",
            "vite/client",
            "vite-plugin-svg-icons",
            "vitest/global"
        ],
        "paths": {
            "/@/*": ["src/*"],
            "/#/*": ["types/*"],
            "@/*": ["src/*"],
            "#/*": ["types/*"]
        }
    },
    "include": [
        "test/**/*.ts",
        "test/**/*.tsx",
        "test/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.d.ts",
        "types/**/*.ts",
        "types/**/*.d.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "**/*.js"
    ]
}
